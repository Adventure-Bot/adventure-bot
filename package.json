{
  "name": "adventure-bot",
  "version": "1.0.0",
  "description": "Slay a monster! Stab your friends! Adventure bot!",
  "main": "index.js",
  "private": true,
  "scripts": {
    "game": "yarn workspace @adventure-bot/game",
    "postinstall": "yarn patch-package",
    "lint": "eslint . --ext .ts",
    "lint-and-fix": "eslint . --ext .ts --fix",
    "format:check": "prettier --check .",
    "format:write": "prettier --write .",
    "prune-imports": "yarn ts-prune -ep ./packages/game/tsconfig.json",
    "prune-imports:watch": "nodemon --config nodemon-prune.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Adventure-Bot/adventure-bot.git"
  },
  "keywords": [
    "discord",
    "typescript",
    "bot"
  ],
  "author": "Brian Gates (brian.g.gates@gmail.com)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Adventure-Bot/adventure-bot/issues"
  },
  "homepage": "https://github.com/Adventure-Bot/adventure-bot#readme",
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^3.1.1",
    "@types/node": "^14.0.20",
    "@typescript-eslint/eslint-plugin": "^3.6.0",
    "@typescript-eslint/parser": "^3.6.0",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^8.3.0",
    "nodemon": "^2.0.4",
    "patch-package": "^6.4.7",
    "prettier": "2.5.1",
    "ts-node": "^8.10.2",
    "ts-prune": "^0.10.3",
    "tsconfig-paths": "^3.12.0",
    "tscpaths": "^0.0.9"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "dotenv-cli": "^4.1.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.4.4"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  }
}
