{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": ".build",
    "baseUrl": "src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "paths": {
      "@adventure-bot/game/*": ["./*"]
    },
    "plugins": [
      { "transform": "typescript-transform-paths", "afterDeclarations": true }
    ]
  },
  "exclude": ["node_modules", "**/*.js"],
  "include": ["src/**/*.ts"]
}
