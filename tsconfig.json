{
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "es6"
    ],
    "allowJs": true,
    "outDir": ".build",
    "rootDir": "src",
    "baseUrl": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "paths": {
      "*": ["node_modules/*"],
      "@adventure-bot/*": ["*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
